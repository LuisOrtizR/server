generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  emails    Json     @default("[]") // Lista de correos como JSON
  createdAt DateTime @default(now())

  passwordResets PasswordReset[]
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  used      Boolean  @default(false)
  adminId   Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  admin Admin @relation(fields: [adminId], references: [id], onDelete: Cascade)
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String   @db.Text     // <- permite mensajes largos
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  techStack   String
  image       String?
  gallery     Json?    @default("[]")
  link        String?
  createdAt   DateTime @default(now())
}

model AboutMe {
  id          Int      @id @default(autoincrement())
  description String   @db.Text     // <- permite descripción larga
  images      Json?    @default("[]") // Array de nombres de archivo de imágenes
  cv          String?                       // Nombre del archivo PDF
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
