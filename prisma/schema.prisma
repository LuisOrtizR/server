generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  emails    Json     @default("[]") // Lista de correos como JSON
  createdAt DateTime @default(now())

  passwordResets PasswordReset[]
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  used      Boolean  @default(false)
  adminId   Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  admin Admin @relation(fields: [adminId], references: [id], onDelete: Cascade)
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String   @db.Text
  isRead    Boolean  @default(false)
  starred   Boolean  @default(false)  // ⭐ NUEVO: Sistema de favoritos
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt        // ⭐ NUEVO: Tracking de actualizaciones

  @@index([isRead])      // ⭐ NUEVO: Índice para filtrado por lectura
  @@index([createdAt])   // ⭐ NUEVO: Índice para ordenamiento
  @@index([starred])     // ⭐ NUEVO: Índice para filtrado por favoritos
  @@map("contacts")
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  techStack   String
  image       String?
  gallery     Json?    @default("[]")
  link        String?
  createdAt   DateTime @default(now())
}

model AboutMe {
  id          Int      @id @default(autoincrement())
  description String   @db.Text
  images      Json?    @default("[]")
  cv          String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}